{
  "extends": [
    // Set up default rules for installed packages
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:import/recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:@typescript-eslint/recommended",
    // Disable rules that conflict with prettier
    // Below lines override rules above
    "eslint-config-prettier",
    "prettier"
  ],
  "plugins": ["prettier"],
  "settings": {
    "react": {
      // eslint-plugin-react detect react version
      "version": "detect"
    }
  },
  "env": {
    "node": true
  },
  "rules": {
    "typescript-eslint/ban-types": "off",

    "import/no-unresolved": "off",
    // Disable rules that require imports in tsx
    "react/react-in-jsx-scope": "off",
    // Warn when a tag does not have rel='noreferrer'
    "react/jsx-no-target-blank": "warn",
    // Disable prop-types
    "react/prop-types": "off",
    // Enhance some rules of prettier (copy from .prettierrc)
    "prettier/prettier": [
      "warn",
      {
        "arrowParens": "always",
        "semi": false,
        "trailingComma": "none",
        "tabWidth": 2,
        "endOfLine": "auto",
        "useTabs": false,
        "singleQuote": false,
        "printWidth": 120,
        "jsxSingleQuote": true
      }
    ]
  }
}